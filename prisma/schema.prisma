// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]  @relation("Events")
  guests    Guest[]  @relation("Guests")
}

model Event {
  id                   Int      @id @default(autoincrement())
  name                 String
  description          String
  creatorId            Int
  creator              User     @relation("Events", fields: [creatorId], references: [id])
  coordinates          Float[]
  confirmationDeadline DateTime
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  guests               Guest[]  @relation
  date                 DateTime
}

model Guest {
  id                 Int                @id @default(autoincrement())
  userId             Int
  eventId            Int
  user               User               @relation("Guests", fields: [userId], references: [id])
  event              Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
  confirmationStatus confirmationStatus

  @@unique([userId, eventId])
}

enum confirmationStatus {
  PENDING
  ATTENDING
  NOT_ATTENDING
  HOST
}
